<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="home2RowModel" type="com.application.app.modules.home.data.model.Home2RowModel"/>
    </data>
    <LinearLayout android:clickable="true"
        android:id="@+id/linearGroup16"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" android:orientation="vertical">
        <LinearLayout android:id="@+id/linearGroup17"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" android:orientation="horizontal">
            <LinearLayout android:id="@+id/linearBlogDetails"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_weight="1.5" android:layout_width="0dp" android:orientation="vertical">
                <TextView android:gravity="top|start"
                    android:id="@+id/txtHome"
                    android:layout_gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@{home2RowModel.txtHome}"
                    style="@style/txtPoppinssemibold12" tools:text="@string/lbl_logo"/>
                <TextView android:gravity="top|start"
                    android:id="@+id/txtEasyToUse"
                    android:layout_gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4pxv"
                    android:layout_width="wrap_content"
                    android:text="@{home2RowModel.txtEasyToUse}"
                    style="@style/txtPoppinssemibold16" tools:text="@string/msg_lorem_ipsum_dol2"/>
                <LinearLayout android:id="@+id/linearReadInfo"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16pxv"
                    android:layout_width="match_parent" android:orientation="horizontal">
                    <TextView android:gravity="top|start"
                        android:id="@+id/txtHome1"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:layout_width="0dp"
                        android:text="@{home2RowModel.txtHome1}"
                        style="@style/txtPoppinsmedium12" tools:text="@string/lbl_16_days_ago"/>
                    <View
                        android:background="@drawable/rectangle_bg_black_900_87_radius_1_5"
                        android:id="@+id/viewDividerCircle"
                        android:layout_gravity="center_vertical"
                        android:layout_height="@dimen/_3pxh"
                        android:layout_marginBottom="@dimen/_7pxv"
                        android:layout_marginStart="@dimen/_10pxh"
                        android:layout_marginTop="@dimen/_8pxv" android:layout_width="@dimen/_3pxh"/>
                    <TextView android:gravity="top|start"
                        android:id="@+id/txtHome2"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12pxh"
                        android:layout_weight="1.2"
                        android:layout_width="0dp"
                        android:text="@{home2RowModel.txtHome2}"
                        style="@style/txtPoppinsmedium12" tools:text="@string/lbl_3_min_read"/>
                    <ImageView android:id="@+id/imageBookmarkIcon"
                        android:layout_gravity="center_vertical"
                        android:layout_height="@dimen/_17pxh"
                        android:layout_marginBottom="@dimen/_1pxv"
                        android:layout_marginStart="@dimen/_61pxh"
                        android:layout_width="@dimen/_13pxh"
                        android:scaleType="fitXY" android:src="@drawable/img_bookmark_icon"/>
                </LinearLayout>
            </LinearLayout>
            <ImageView android:id="@+id/imageBlogThumbnail"
                android:layout_gravity="center_vertical"
                android:layout_height="@dimen/_80pxh"
                android:layout_marginStart="@dimen/_15pxh"
                android:layout_width="@dimen/_80pxh"
                android:scaleType="centerCrop"
                cornerRadius="@{@dimen/_5pxh}"
                imageRes="@{@drawable/img_blog_thumbnail}" tools:src="@drawable/img_blog_thumbnail"/>
        </LinearLayout>
        <View android:background="@color/gray_400"
            android:id="@+id/lineDividerType"
            android:layout_gravity="center"
            android:layout_height="@dimen/_1pxv"
            android:layout_marginTop="@dimen/_28pxv" android:layout_width="@dimen/_335pxh"/>
    </LinearLayout>
</layout>

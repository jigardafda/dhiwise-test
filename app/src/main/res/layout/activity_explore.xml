<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="exploreVM" type="com.application.app.modules.explore.data.viewmodel.ExploreVM"/>
    </data>
    <LinearLayout android:id="@+id/linearGroup52"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_A700">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarGroup50"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_28pxv"
            android:layout_width="match_parent" app:contentInsetStart="0dp">
            <LinearLayout android:id="@+id/linearGroup41"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:layout_width="match_parent" android:orientation="horizontal">
                <ImageView android:id="@+id/imageDrawerIcon"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_20pxh"
                    android:layout_marginBottom="@dimen/_8pxv"
                    android:layout_marginStart="@dimen/_28pxh"
                    android:layout_marginTop="@dimen/_8pxv"
                    android:layout_width="@dimen/_19pxh"
                    android:scaleType="fitXY" android:src="@drawable/img_drawer_icon"/>
                <TextView android:gravity="top|start"
                    android:id="@+id/txtCategory"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_22pxh"
                    android:layout_weight="1.1"
                    android:layout_width="0dp"
                    android:text="@{exploreVM.exploreModel.txtCategory}"
                    style="@style/txtPoppinssemibold24" tools:text="@string/lbl_explore"/>
                <ImageView android:id="@+id/imageIconNotificati"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_21pxh"
                    android:layout_marginBottom="@dimen/_7pxv"
                    android:layout_marginStart="@dimen/_123pxh"
                    android:layout_marginTop="@dimen/_7pxv"
                    android:layout_width="@dimen/_20pxh"
                    android:scaleType="fitXY" android:src="@drawable/img_icon_notificati"/>
                <ImageView android:id="@+id/imageIconSearch"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_20pxh"
                    android:layout_marginBottom="@dimen/_8pxv"
                    android:layout_marginEnd="@dimen/_28pxh"
                    android:layout_marginStart="@dimen/_20pxh"
                    android:layout_marginTop="@dimen/_8pxv"
                    android:layout_width="@dimen/_20pxh"
                    android:scaleType="fitXY" android:src="@drawable/img_icon_search"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
        <androidx.core.widget.NestedScrollView
            android:clipToPadding="false" android:fillViewport="true"
            android:id="@+id/scrollViewGroup53"
            android:layout_gravity="center_horizontal"
            android:layout_height="match_parent"
            android:layout_weight="1" android:layout_width="match_parent">
            <LinearLayout android:id="@+id/linearGroup40"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_115pxv" android:paddingTop="@dimen/_15pxv">
                <EditText
                    android:background="@drawable/rectangle_bg_black_900_63_radius_10"
                    android:drawablePadding="@dimen/_5pxh"
                    android:drawableStart="@drawable/img_serach_box"
                    android:hint="@string/lbl_search"
                    android:id="@+id/etSerachBox"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_28pxh"
                    android:layout_marginStart="@dimen/_28pxh"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/_17pxv"
                    android:paddingStart="@dimen/_20pxh"
                    android:paddingTop="@dimen/_17pxv"
                    android:singleLine="true"
                    android:text="@={exploreVM.exploreModel.etSerachBoxValue}"
                    android:textColorHint="@color/gray_700" style="@style/etSolidRounded"/>
                <HorizontalScrollView android:fillViewport="true"
                    android:id="@+id/horizontalScrollGroup51"
                    android:layout_gravity="end"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_22pxv"
                    android:layout_width="match_parent" android:scrollbars="none">
                    <LinearLayout android:id="@+id/linearGroup43"
                        android:layout_gravity="center|end"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" android:orientation="horizontal">
                        <TextView android:gravity="center"
                            android:id="@+id/txtScience"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_1pxv"
                            android:layout_width="wrap_content"
                            android:paddingBottom="@dimen/_9pxv"
                            android:paddingEnd="@dimen/_10pxh"
                            android:paddingStart="@dimen/_11pxh"
                            android:paddingTop="@dimen/_9pxv"
                            android:text="@{exploreVM.exploreModel.txtScience}"
                            style="@style/txtSolidRounded" tools:text="@string/lbl_science"/>
                        <TextView android:gravity="center"
                            android:id="@+id/txtLoremIpsum"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_1pxv"
                            android:layout_marginStart="@dimen/_12pxh"
                            android:layout_width="wrap_content"
                            android:paddingBottom="@dimen/_9pxv"
                            android:paddingEnd="@dimen/_15pxh"
                            android:paddingStart="@dimen/_15pxh"
                            android:paddingTop="@dimen/_9pxv"
                            android:text="@{exploreVM.exploreModel.txtLoremIpsum}"
                            style="@style/txtSolidRounded" tools:text="@string/lbl_lorem_ipsum"/>
                        <TextView android:gravity="center"
                            android:id="@+id/txtDesign"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_1pxv"
                            android:layout_marginStart="@dimen/_12pxh"
                            android:layout_width="wrap_content"
                            android:paddingBottom="@dimen/_9pxv"
                            android:paddingEnd="@dimen/_13pxh"
                            android:paddingStart="@dimen/_13pxh"
                            android:paddingTop="@dimen/_9pxv"
                            android:text="@{exploreVM.exploreModel.txtDesign}"
                            style="@style/txtSolidRounded" tools:text="@string/lbl_design"/>
                        <androidx.appcompat.widget.AppCompatButton
                            android:gravity="center"
                            android:id="@+id/btnTechnology"
                            android:layout_gravity="center_vertical"
                            android:layout_height="@dimen/_40pxv"
                            android:layout_marginEnd="@dimen/_60pxh"
                            android:layout_marginStart="@dimen/_12pxh"
                            android:layout_marginTop="@dimen/_1pxv"
                            android:layout_width="@dimen/_108pxh"
                            android:text="@string/lbl_technology"
                            android:textAllCaps="false"
                            style="@style/btnSolidRounded" tools:text="@string/lbl_technology"/>
                    </LinearLayout>
                </HorizontalScrollView>
                <View android:background="@color/gray_400"
                    android:id="@+id/lineDividerLine"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/_1pxv"
                    android:layout_marginTop="@dimen/_25pxv" android:layout_width="@dimen/_375pxh"/>
                <TextView android:gravity="top|start"
                    android:id="@+id/txtLoremIpsumIs"
                    android:layout_gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_20pxh"
                    android:layout_marginStart="@dimen/_20pxh"
                    android:layout_marginTop="@dimen/_28pxv"
                    android:layout_width="wrap_content"
                    android:text="@{exploreVM.exploreModel.txtLoremIpsumIs}"
                    style="@style/txtPoppinssemibold14" tools:text="@string/msg_recommended_for"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerArticleList"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_23pxv"
                    android:layout_width="match_parent"
                    android:nestedScrollingEnabled="false"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    itemSpace="@{@dimen/_20pxh}" tools:itemCount="3" tools:listitem="@layout/row_explore1"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>

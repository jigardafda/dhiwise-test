<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="interestsPeople1RowModel" type="com.application.app.modules.interestspeople.data.model.InterestsPeople1RowModel"/>
    </data>
    <LinearLayout android:id="@+id/linearPeopleList1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" android:orientation="horizontal">
        <ImageView android:id="@+id/imageProfilePicture"
            android:layout_gravity="center_vertical"
            android:layout_height="@dimen/_60pxh"
            android:layout_width="@dimen/_60pxh"
            android:scaleType="centerCrop" circular="@{true}"
            imageRes="@{@drawable/img_profile_picture}" tools:src="@drawable/img_profile_picture"/>
        <LinearLayout android:id="@+id/linearPersonDetails"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15pxh"
            android:layout_marginTop="@dimen/_1pxv"
            android:layout_weight="1.4" android:layout_width="0dp" android:orientation="vertical">
            <TextView android:gravity="start" android:id="@+id/txtName"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@{interestsPeople1RowModel.txtName}"
                style="@style/txtPoppinssemibold16" tools:text="@string/lbl_john_doe"/>
            <TextView android:gravity="start"
                android:id="@+id/txtDescription"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3pxv"
                android:layout_width="match_parent"
                android:text="@{interestsPeople1RowModel.txtDescription}"
                style="@style/txtPoppinsregular12_1" tools:text="@string/msg_lorem_ipsum_is"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:gravity="center" android:id="@+id/btnFollowButton"
            android:layout_gravity="top"
            android:layout_height="@dimen/_32pxv"
            android:layout_marginBottom="@dimen/_28pxv"
            android:layout_marginStart="@dimen/_11pxh"
            android:layout_width="@dimen/_87pxh"
            android:text="@string/lbl_follow"
            android:textAllCaps="false" style="@style/btnSolidRounded_1" tools:text="@string/lbl_follow"/>
    </LinearLayout>
</layout>

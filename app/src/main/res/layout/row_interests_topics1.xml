<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="interestsTopics1RowModel" type="com.application.app.modules.intereststopics.data.model.InterestsTopics1RowModel"/>
    </data>
    <LinearLayout android:id="@+id/linearTopicList1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" android:orientation="horizontal">
        <ImageView android:id="@+id/imageThumbnail"
            android:layout_gravity="center_vertical"
            android:layout_height="@dimen/_40pxh"
            android:layout_width="@dimen/_40pxh"
            android:scaleType="centerCrop"
            cornerRadius="@{@dimen/_5pxh}"
            imageRes="@{@drawable/img_blog_thumbnail}" tools:src="@drawable/img_blog_thumbnail"/>
        <TextView android:gravity="top|start"
            android:id="@+id/txtEasyToUse"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_8pxv"
            android:layout_marginStart="@dimen/_17pxh"
            android:layout_marginTop="@dimen/_8pxv"
            android:layout_weight="1.1" android:layout_width="0dp"
            android:text="@{interestsTopics1RowModel.txtEasyToUse}"
            style="@style/txtPoppinsregular14" tools:text="@string/lbl_art"/>
        <androidx.appcompat.widget.AppCompatButton
            android:gravity="center" android:id="@+id/btnFollowButton"
            android:layout_gravity="center_vertical"
            android:layout_height="@dimen/_32pxv"
            android:layout_marginBottom="@dimen/_4pxv"
            android:layout_marginStart="@dimen/_66pxh"
            android:layout_marginTop="@dimen/_4pxv"
            android:layout_width="@dimen/_87pxh"
            android:text="@string/lbl_follow"
            android:textAllCaps="false" style="@style/btnSolidRounded_1" tools:text="@string/lbl_follow"/>
    </LinearLayout>
</layout>

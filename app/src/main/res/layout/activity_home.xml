<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="homeVM" type="com.application.app.modules.home.data.viewmodel.HomeVM"/>
    </data>
    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_height="match_parent"
        android:layout_width="match_parent" style="@style/groupStylewhite_A700">
        <LinearLayout android:id="@+id/linearGroup24"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical" style="@style/groupStylewhite_A700">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarGroup22"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_28pxv"
                android:layout_width="match_parent" app:contentInsetStart="0dp">
                <LinearLayout android:id="@+id/linearGroup13"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent" android:orientation="horizontal">
                    <ImageView android:id="@+id/imageDrawerIcon"
                        android:layout_gravity="center_vertical"
                        android:layout_height="@dimen/_20pxh"
                        android:layout_marginBottom="@dimen/_8pxv"
                        android:layout_marginStart="@dimen/_28pxh"
                        android:layout_marginTop="@dimen/_8pxv"
                        android:layout_width="@dimen/_19pxh"
                        android:scaleType="fitXY" android:src="@drawable/img_drawer_icon"/>
                    <TextView android:gravity="top|start"
                        android:id="@+id/txtCategory"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_22pxh"
                        android:layout_weight="0.9"
                        android:layout_width="0dp"
                        android:text="@string/lbl_home"
                        style="@style/txtPoppinssemibold24" tools:text="@string/lbl_home"/>
                    <ImageView android:id="@+id/imageNotificationIc"
                        android:layout_gravity="center_vertical"
                        android:layout_height="@dimen/_21pxh"
                        android:layout_marginBottom="@dimen/_7pxv"
                        android:layout_marginStart="@dimen/_142pxh"
                        android:layout_marginTop="@dimen/_7pxv"
                        android:layout_width="@dimen/_20pxh"
                        android:scaleType="fitXY" android:src="@drawable/img_notification_ic"/>
                    <ImageView android:id="@+id/imageSearchIcon"
                        android:layout_gravity="center_vertical"
                        android:layout_height="@dimen/_20pxh"
                        android:layout_marginBottom="@dimen/_8pxv"
                        android:layout_marginEnd="@dimen/_28pxh"
                        android:layout_marginStart="@dimen/_20pxh"
                        android:layout_marginTop="@dimen/_8pxv"
                        android:layout_width="@dimen/_20pxh"
                        android:scaleType="fitXY" android:src="@drawable/img_search_icon"/>
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>
            <androidx.core.widget.NestedScrollView
                android:clipToPadding="false"
                android:fillViewport="true"
                android:id="@+id/scrollViewGroup25"
                android:layout_gravity="center_horizontal"
                android:layout_height="match_parent"
                android:layout_weight="1" android:layout_width="match_parent">
                <LinearLayout android:id="@+id/linearGroup12"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_41pxv" android:paddingTop="@dimen/_18pxv">
                    <HorizontalScrollView android:fillViewport="true"
                        android:id="@+id/horizontalScrollGroup23"
                        android:layout_gravity="end"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent" android:scrollbars="none">
                        <LinearLayout android:id="@+id/linearGroup15"
                            android:layout_gravity="center|end"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content" android:orientation="horizontal">
                            <TextView android:gravity="center"
                                android:id="@+id/txtScience"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_1pxv"
                                android:layout_width="wrap_content"
                                android:paddingBottom="@dimen/_9pxv"
                                android:paddingEnd="@dimen/_10pxh"
                                android:paddingStart="@dimen/_11pxh"
                                android:paddingTop="@dimen/_9pxv"
                                android:text="@string/lbl_science"
                                style="@style/txtSolidRounded" tools:text="@string/lbl_science"/>
                            <TextView android:gravity="center"
                                android:id="@+id/txtLoremIpsum"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_1pxv"
                                android:layout_marginStart="@dimen/_12pxh"
                                android:layout_width="wrap_content"
                                android:paddingBottom="@dimen/_9pxv"
                                android:paddingEnd="@dimen/_15pxh"
                                android:paddingStart="@dimen/_15pxh"
                                android:paddingTop="@dimen/_9pxv"
                                android:text="@string/lbl_lorem_ipsum"
                                style="@style/txtSolidRounded" tools:text="@string/lbl_lorem_ipsum"/>
                            <TextView android:gravity="center"
                                android:id="@+id/txtDesign"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_1pxv"
                                android:layout_marginStart="@dimen/_12pxh"
                                android:layout_width="wrap_content"
                                android:paddingBottom="@dimen/_9pxv"
                                android:paddingEnd="@dimen/_13pxh"
                                android:paddingStart="@dimen/_13pxh"
                                android:paddingTop="@dimen/_9pxv"
                                android:text="@string/lbl_design"
                                style="@style/txtSolidRounded" tools:text="@string/lbl_design"/>
                            <androidx.appcompat.widget.AppCompatButton
                                android:gravity="center"
                                android:id="@+id/btnTechnology"
                                android:layout_gravity="center_vertical"
                                android:layout_height="@dimen/_40pxv"
                                android:layout_marginEnd="@dimen/_60pxh"
                                android:layout_marginStart="@dimen/_12pxh"
                                android:layout_marginTop="@dimen/_1pxv"
                                android:layout_width="@dimen/_108pxh"
                                android:text="@string/lbl_technology"
                                android:textAllCaps="false"
                                style="@style/btnSolidRounded" tools:text="@string/lbl_technology"/>
                        </LinearLayout>
                    </HorizontalScrollView>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerPeopleList"
                        android:layout_gravity="end"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_24pxv"
                        android:layout_width="match_parent"
                        android:nestedScrollingEnabled="false"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        itemSpace="@{@dimen/_16pxh}" tools:itemCount="4" tools:listitem="@layout/row_home1"/>
                    <View android:background="@color/gray_400"
                        android:id="@+id/lineLine1"
                        android:layout_gravity="center"
                        android:layout_height="@dimen/_1pxv"
                        android:layout_marginTop="@dimen/_28pxv" android:layout_width="@dimen/_375pxh"/>
                    <TextView android:gravity="top|start"
                        android:id="@+id/txtTopStories"
                        android:layout_gravity="start"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_20pxh"
                        android:layout_marginStart="@dimen/_20pxh"
                        android:layout_marginTop="@dimen/_27pxv"
                        android:layout_width="wrap_content"
                        android:text="@string/lbl_top_stories"
                        style="@style/txtPoppinssemibold14" tools:text="@string/lbl_top_stories"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerStoryList"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_19pxv"
                        android:layout_width="match_parent"
                        android:nestedScrollingEnabled="false"
                        android:orientation="vertical"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        itemSpace="@{@dimen/_20pxh}" tools:itemCount="3" tools:listitem="@layout/row_home2"/>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
        <LinearLayout android:id="@+id/leftDrawer"
            android:layout_gravity="start"
            android:layout_height="match_parent"
            android:layout_width="@dimen/_287pxh" android:orientation="vertical">
            <include android:id="@+id/included"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                drawerItemDrawerMenuModel="@{homeVM.includedModel}" layout="@layout/drawer_item_drawer_menu"/>
        </LinearLayout>
    </androidx.drawerlayout.widget.DrawerLayout>
</layout>
